executor {
  name = 'lsf'
  perJobMemLimit = true
  scratch = true
  TMPDIR = '/scratch'
}
process {
  withName: split_sample_sheet_task {
    executor="local"
  }
  withName: align_to_reference_task {
    cpus = 1
    memory = 1.GB
  }
  withLabel: BSUB_OPTIONS_BWA_MEM {
    cpus = 40
    memory = 5.GB
    clusterOptions = "-o bsub_bwa_mem.out"
  }
  withLabel: BSUB_OPTIONS_LARGE {
    cpus = 13
    memory = 7.GB
    clusterOptions = "-o bsub.out"
  }
  withLabel: BSUB_OPTIONS_SMALL {
    cpus = 8
    memory = 6.GB
    clusterOptions = "-o bsub.out"
  }
  withLabel: BSUB_OPTIONS_DEMUX {
    cpus = 36
    memory = 6.GB
    clusterOptions = "-o bsub_demux.out"
  }
}
env {
  BWA="/opt/common/CentOS_7/bwa/bwa-0.7.17/bwa"
  PICARD="java -jar /home/igo/resources/picard2.21.8/picard.jar"
  CELL_RANGER_ATAC="/home/nabors/cellranger-atac-1.1.0/cellranger-atac"
  SEQUENCER_DIR="/igo/sequencers"
  FASTQ_DIR="/igo/stats/NF_TESTING/FASTQ"
  STATS_DIR="/igo/stats/NF_TESTING/stats"
  LAB_SAMPLE_SHEET_DIR="/pskis34/LIMS/LIMS_SampleSheets"
  PROCESSED_SAMPLE_SHEET_DIR="/igo/stats/NF_TESTING/DividedSampleSheets"
  LOG_FILE="/igo/stats/NF_TESTING/log/nf_fastq_run.log"
  CMD_FILE="/igo/stats/NF_TESTING/commands/commands.log"
  DEMUX_LOG_FILE="/igo/stats/NF_TESTING/commands/bcl2fastq.log"
  SPLIT_SAMPLE_SHEETS="split_sample_sheets.txt"
  RUN_PARAMS_FILE="sample_params.txt"
  PIPELINE_OUT="./pipeline_out"
  UNASSIGNED_PARAMETER="NOT_DETECTED"
  OUT_BWA="BWA"
  RUN_ERROR="RUN_ERROR"
}
